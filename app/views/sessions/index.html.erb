<div class="form-page">
  <h1>Log in page</h1>
  <%= form_with scope: :session, url: sessions_path, local: true do |f| %>
    <%= f.label :your_username %><br>
    <%= f.text_field :name, autofocus: true %>
    <br><br>
    <%= f.label :your_email %><br>
    <%= f.text_field :email, autofocus: true %>
    <br><br>
    <%= f.submit 'Log in!', class: 'btn' %>
  <% end %>
</div>
